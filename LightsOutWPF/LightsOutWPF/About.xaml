<Window x:Class="LightsOutWPF.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LightsOutWPF"
        mc:Ignorable="d"
        Title="About" Height="300" Width="300">
    <DockPanel HorizontalAlignment="Left" VerticalAlignment="Center">
        <Button DockPanel.Dock="Bottom" Content="OK" Width="75" Click="Button_Click" VerticalContentAlignment="Center" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
        <Label DockPanel.Dock="Top" HorizontalAlignment="Center"  VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="131" Content="Lights Out"/>
        <Label DockPanel.Dock="Top" Content="Samuel Young" HorizontalAlignment="Center"  VerticalAlignment="Top" HorizontalContentAlignment="Center"/>
        <Image DockPanel.Dock="left" Name="image1" Stretch="fill" Source="lights.jpg" Height="134" Width="102" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        <Label Content="Get all the tiles to be turned out " HorizontalAlignment="Left" VerticalAlignment="Top"/>
        

    </DockPanel>
</Window>
